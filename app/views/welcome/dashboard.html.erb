<% @articles.each do |article| %>
    <h1> <%= link_to article.title, article %> </h1>
    <div>
        <%=article.body.html_safe %> - <%= link_to "Eliminar", article, method: :delete 
            %>-
            <%if article.may_publish?%>
                <%= link_to "Publicar", "/publicar/#{article.id}/publish", method: :put %>
            <% end%>
    </div>
<% end %>